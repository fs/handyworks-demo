<% title 'Patients' %>

<div class="actions"><%= link_to "Add New Patient", new_patient_path, :class => 'new-pacient' %></div>
<div class="pacients">
  <table class="patients" border="0" cellspacing="0" cellpadding="0">
    <thead>
	  <tr>
	    <th>Account</th>
	    <th>First Name</th>
	    <th>Last Name</th>
	    <th>Email</th>
	    <th>Address</th>
	    <th>Phone</th>
	    <th>Actions</th>
	  </tr>
    </thead>
    <tbody>
	<% for patient in @patients %>
	  <tr class="<%= cycle 'first', 'second'  %>">
		<td><%=h patient.account %></td>
		<td><%=h patient.first_name %></td>
		<td><%=h patient.last_name %></td>
		<td><%=h patient.email %></td>
		<td><%=h patient.state %> <%=h patient.city %> <%=h patient.zip %> <%=h patient.address1 %></td>
		<td><%=h patient.phone %></td>
		<td><%= link_to "Edit", edit_patient_path(patient) %></td>
	  </tr>
	<% end %>
    </tbody>
  </table>
</div>