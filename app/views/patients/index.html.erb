<p class="name">Universal Health Clinic</p>

<ul class="steps">
  <li class="first active"><%= link_to "New patient", new_patient_path %></li>
  <li><a href="#">2 step</a></li>
  <li><a href="#">3 step</a></li>
  <li class="last"><a href="#">4 step</a></li>
</ul>

<h1>...</h1>

<table class="patients">
  <thead>
	<tr>
	  <th>Account</th>
	  <th>First Name</th>
	  <th>Last Name</th>
	  <th>Email</th>
	  <th>Address</th>
	  <th>Phone</th>
	  <th>Actions</th>
	</tr>
  </thead>
  <tbody>
	<% @counter = 0 %>
	<% for patient in @patients %>
	<%
	  @counter = @counter + 1
	  if (@counter % 2 == 1)
		@classname = 'odd'
	  else
		@classname = 'even'
	  end
	%>
	  <tr class="<%=h @classname %>">
		<td><%=h patient.account %></td>
		<td><%=h patient.first_name %></td>
		<td><%=h patient.last_name %></td>
		<td><%=h patient.email %></td>
		<td><%=h patient.state %> <%=h patient.city %> <%=h patient.zip %> <%=h patient.address1 %></td>
		<td><%=h patient.phone %></td>
		<td><%= link_to "Edit", edit_patient_path(patient) %></td>
	  </tr>
	<% end %>
  </tbody>
</table>

<p><%= link_to "New Patient", new_patient_path %></p>