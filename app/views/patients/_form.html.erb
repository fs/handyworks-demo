<% form_for @patient do |f| %>
  <%= f.error_messages %>

  <div class="form">
    <h2>Personal Data</h2>
    
	  <div>
  		<%= f.label :title, "Mr/Mrs/Ms" %>
  		<%= f.select :title, APP_CONFIG['options']['title'] %>
	  </div>
	  
	  <div>
		<%= f.label :first_name, nil, {:class => 'required'} %>
  		<%= f.text_field :first_name %>
	  </div>
	  
	  <div>
  		<%= f.label :last_name, nil, {:class => 'required'} %>
  		<%= f.text_field :last_name %>
	  </div>
	  
	  <div>
  		<%= f.label :address1, "Address", {:class => 'required'} %>
  		<%= f.text_field :address1 %>
	  </div>
	  
	  <div>
  		<%= f.label :city, nil, {:class => 'required'} %>
  		<%= f.text_field :city %>
	  </div>
	  
	  <div>
  		<%= f.label :state, nil, {:class => 'required'} %>
  		<%= f.state_select :state %>
	  </div>
	  
	  <div>
  		<%= f.label :zip, nil, {:class => 'required'} %>
  		<%= f.text_field :zip %>
	  </div>
	  
	  <div>
  		<%= f.label :phone, nil, {:class => 'required'} %>
  		<%= f.text_field :phone %>
	  </div>
	  
	  <div>
  		<%= f.label :work_phone %>
  		<%= f.text_field :work_phone %>
	  </div>
	  
	  <div>
  		<%= f.label :cell_phone %>
  		<%= f.text_field :cell_phone %>
	  </div>
	  
	  <div>
  		<%= f.label :social_security_number, "SS#", {:class => 'required'} %>
  		<%= f.text_field :social_security_number %>
	  </div>
	  
	  <div>
  		<%= f.label :spouse %>
  		<%= f.text_field :spouse %>
	  </div>
	  
	  <div>
  		<%= f.label :account, nil, {:class => 'required'} %>
  		<%= f.text_field :account %>
	  </div>
	  	  <div class="two-col">
	      <div>
		  <%= f.label :category_id, 'Category' %>
		  <%= f.select :category_id, APP_CONFIG['options']['category'], { :include_blank => true } %>
	      </div>
	    
	      <div>
		  <%= f.label :student %>
		  <%= f.select :student, APP_CONFIG['options']['student'] %>
	      </div>
	  </div>
	  <div class="two-col last">
	      <div>
		  <%= f.label :patient_type %>
		  <%= f.select :patient_type, APP_CONFIG['options']['type'] %>
	      </div>
	    
	      <div>
		  <%= f.label :married %>
		  <%= f.select :married, APP_CONFIG['options']['married'] %>
	      </div>
	  </div>
	  <div>
  		<%= f.label :work_status %>
  		<%= f.select :work_status, APP_CONFIG['options']['work_status'] %>
	  </div>
	  
	  <div>
  		<%= f.label :clinic_id, 'Clinic' %>
  		<%= f.select :clinic_id, APP_CONFIG['options']['clinic'], { :include_blank => true } %>
	  </div>
	  
	  <div>
  		<%= f.label :referred_by_id, "Patient referred to us by" %>
  		<%= f.select :referred_by_id, APP_CONFIG['options']['referred_by'], { :include_blank => true } %>
	  </div>
  </div>
  
  <div class="form">
    <h2>Other Data</h2>
    
	  <div>
  		<%= f.label :sex %>
  		<%= f.select :sex, APP_CONFIG['options']['sex'] %>
	  </div>
	  
	  <div>
  		<%= f.label :employer %>
  		<%= f.text_field :employer %>
	  </div>
	  
	  <div>
  		<%= f.label :work_address1, "Address" %>
  		<%= f.text_field :work_address1 %>
	  </div>
	  
	  <div>
  		<%= f.label :work_city %>
  		<%= f.text_field :work_city %>
	  </div>
	  
	  <div>
  		<%= f.label :work_state %>
  		<%= f.text_field :work_state %>
	  </div>
	  
	  <div>
  		<%= f.label :work_zip %>
  		<%= f.text_field :work_zip %>
	  </div>
	  
	  <div>
  		<%= f.label :work_comment %>
  		<%= f.text_field :work_comment %>
	  </div>
	  
	  <div>
  		<%= f.label :email, nil, {:class => 'required'} %>
  		<%= f.text_field :email %>
	  </div>
	  
	  <div style="float:left; width:14.4em; margin-top:1em; clear:left; ">
  		<div class="check">
  		  <%= f.check_box :release_info %>
  		  <%= f.label :release_info %>
  		</div>
  		
  		<div class="check">
  		  <%= f.check_box :send_statement %>
  		  <%= f.label :send_statement %>
  		</div>
  		
  		<div class="check">
  		  <%= f.check_box :finance_charge %>
  		  <%= f.label :finance_charge %>
  		</div>
	  </div>
	  
	  <div style="margin-top:1em; clear:right; float:left; width:16em; ">
  		<div class="check">
  		  <%= f.check_box :authorization_on_file %>
  		  <%= f.label :authorization_on_file %>
  		</div>
  		
  		<div class="check">
  		  <%= f.check_box :supress_mail %>
  		  <%= f.label :supress_mail %>
  		</div>
  		
  		<div class="check">
  		  <%= f.check_box :inactive %>
  		  <%= f.label :inactive %>
  		</div>
	  </div>
	
	  <div>
  		<%= f.label :nickname %>
  		<%= f.text_field :nickname %>
	  </div>
	  
	  <div>
  		<%= f.label :top_label %>
  		<%= f.text_field :top_label %>
	  </div>
	  
 	  <div class="dob">
  		<%= f.label :birth_date, "D.O.B.", {:class => 'required'} %>
  		<%= f.date_select :birth_date %>
	  </div>
	  
	  <div class="first-visit">
  		<%= f.label :first_visit %>
  		<%= f.date_select :first_visit %>
	  </div>
	  
	  <div class="last-visit">
  		<%= f.label :last_visit %>
  		<%= f.date_select :last_visit %>
	  </div>
	</div>
	
	<div class="buttons-area">
	  <p class="required"> - required fields</p>
	  <%= f.submit 'Save' %> or
	  <%= link_to 'Cancel', patients_path %>
	</div>
<% end %>
